generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Item {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  code             String
  status           Status @default(published)
  imported_t       String
  url              String
  creator          String
  created_t        String
  last_modified_t  String
  product_name     String
  quantity         String
  brands           String
  categories       String
  labels           String
  cities           String
  purchase_places  String
  stores           String
  ingredients_text String
  traces           String
  serving_size     String
  serving_quantity String
  nutriscore_score String
  nutriscore_grade String
  main_category    String
  image_url        String

  @@map("items")
}

enum Status {
  draft
  trash
  published
}

model controllCollection {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  test String @unique

  @@map("controllCollection")
}
